<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hrib.se2einzelphase1.DivCalc">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bitte geben Sie Zahlen ein!"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textViewDividend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dividend:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/inputDividend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/textViewDivisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Divisor"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/inputDivisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/dividieren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickDividieren"
            android:text="Dividieren" />

        <TextView
            android:id="@+id/textViewOutput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ausgabe:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
